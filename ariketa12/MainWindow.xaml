<Window x:Class="ariketa12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculo de dietas" Height="450" Width="800"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Dietas" Grid.Column="0" Margin="10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="check_box_gosaria" Content="Desayuno" Margin="0,5" LostFocus="Dietas_LostFocus"/>
                    <CheckBox x:Name="check_box_bazkaria" Content="Comida" Margin="0,5" LostFocus="Dietas_LostFocus"/>
                    <CheckBox x:Name="check_box_afaria" Content="Cena" Margin="0,5" LostFocus="Dietas_LostFocus"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Viaje" Grid.Column="1" Margin="10">
                <StackPanel  Margin="10">
                    <Label Content="Kilómetros"/>
                    <TextBox x:Name="text_box_km" Width="150" Margin="0,5" LostFocus="Viaje_LostFocus"/>
                    <Label Content="Horas"/>
                    <TextBox x:Name="text_box_bidaia_orduak" Width="150" Margin="0,5" LostFocus="Viaje_LostFocus"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Trabajo" Grid.Column="2" Margin="10">
                <StackPanel Margin="10">
                    <TextBox x:Name="text_box_lan_orduak" Width="150" Height="25" LostFocus="Trabajo_LostFocus"/>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="text_box_total_dietas" TextWrapping="Wrap" Width="120" Height="25" Margin="30" IsEnabled="False"/>
                <TextBox x:Name="text_box_total_viaje" TextWrapping="Wrap" Width="120" Height="25" Margin="30" IsEnabled="False"/>
                <TextBox x:Name="text_box_total_trabajo" TextWrapping="Wrap" Width="120" Height="25" Margin="30" IsEnabled="False"/>
                <Label Content="TOTAL: " Height="25"/>
                <TextBox x:Name="text_box_total" TextWrapping="Wrap" Width="120" Height="25" IsEnabled="False"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,147,0,0">
                <Button x:Name="btn_limpiar" Content="Limpiar" Width="100" Margin="10" Click="btn_limpiar_Click"/>
                <Button x:Name="btn_salir" Content="Salir" Width="100" Margin="10" Click="btn_salir_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
