<Window x:Class="ariketa13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ariketa13"
        mc:Ignorable="d"
        Title="Editor simple de texto" Height="450" Width="450">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Archivo">
                <MenuItem x:Name="item_salir" Header="Salir"/>
                <TextBox x:Name="item_type_archivo" TextWrapping="Wrap" Text="Escribe aqui"/>
            </MenuItem>
            <MenuItem Header="Editar">
                <MenuItem Header="Cortar     Ctrl+X" />
                <MenuItem Header="Copiar     Ctrl+C" />
                <MenuItem Header="Pegar      Ctrl+V" />
                <MenuItem Header="Eliminar   Del" />
            </MenuItem>
            <MenuItem Header="Fuente">
                <MenuItem Header="Ariel" />
                <MenuItem Header="Courier" />
                <MenuItem Header="Impact" />
                <MenuItem Header="Symbol" />
            </MenuItem>
        </Menu>
        <Grid>
            <TextBox Name="textBoxEditor"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontSize="14"
                 Margin="5"/>
        </Grid>
        <!-- Content for the rest of your window -->
    </DockPanel>
</Window>
