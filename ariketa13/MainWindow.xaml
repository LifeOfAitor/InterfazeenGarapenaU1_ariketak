<Window x:Class="ariketa13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ariketa13"
        mc:Ignorable="d"
        Title="Editor simple de texto" Height="450" Width="450">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Archivo">
                <MenuItem x:Name="item_salir" Header="Salir" Click="item_salir_Click"/>
            </MenuItem>
            <MenuItem Header="Editar">
                <MenuItem Header="Cortar     Ctrl+X" Click="cortar_Click"/>
                <MenuItem Header="Copiar     Ctrl+C" Click="copiar_Click"/>
                <MenuItem Header="Pegar      Ctrl+V" Click="pegar_Click"/>
                <MenuItem Header="Eliminar   Del" Click="eliminar_Click"/>
            </MenuItem>
            <MenuItem Header="Fuente">
                <MenuItem Header="Arial" Click="arial_Click"/>
                <MenuItem Header="Courier" Click="courier_Click"/>
                <MenuItem Header="Impact" Click="impact_Click"/>
                <MenuItem Header="Symbol" Click="symbol_Click"/>
            </MenuItem>
        </Menu>
        <Grid>
            <TextBox Name="textBoxEditor"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontSize="14"
                 Margin="5"/>
        </Grid>
    </DockPanel>
</Window>
