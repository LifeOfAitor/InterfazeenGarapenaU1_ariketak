<Window x:Class="ariketa8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ariketa8"
        mc:Ignorable="d"
        Title="Funciones de fecha" Height="450" Width="800">
    <Grid>
        <Label Content="Ahora" HorizontalAlignment="Left" Margin="90,50,0,0" VerticalAlignment="Top" />
        <Label Content="Hoy" HorizontalAlignment="Left" Margin="90,100,0,0" VerticalAlignment="Top" />
        <Label Content="Hora de hoy" HorizontalAlignment="Left" Margin="90,150,0,0" VerticalAlignment="Top" />
        <Label Content="Suma de fechas" HorizontalAlignment="Left" Margin="90,200,0,0" VerticalAlignment="Top" />
        <Label Content="Diferencia de fechas" HorizontalAlignment="Left" Margin="90,250,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="txtBox_ahora" HorizontalAlignment="Left" Margin="250,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="450"/>
        <TextBox x:Name="txtBox_hoy" HorizontalAlignment="Left" Margin="250,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="450"/>
        <TextBox x:Name="txtBox_hora_hoy" HorizontalAlignment="Left" Margin="250,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="450"/>
        <TextBox x:Name="txtBox_suma" HorizontalAlignment="Left" Margin="250,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="450" GotFocus="txtBox_suma_GotFocus"/>
        <TextBox x:Name="txtBox_diferencia" HorizontalAlignment="Left" Margin="250,250,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="450" GotFocus="txtBox_diferencia_GotFocus"/>

        <Button x:Name="btn_ejecutar" Content="Ejecutar" HorizontalAlignment="Left" Margin="158,355,0,0" VerticalAlignment="Top" Width="142" Click="btn_ejecutar_Click"/>
        <Button x:Name="btn_limpiar" Content="Limpiar" HorizontalAlignment="Left" Margin="358,355,0,0" VerticalAlignment="Top" Width="142" Click="btn_limpiar_Click"/>
        <Button x:Name="btn_salir" Content="Salir" HorizontalAlignment="Left" Margin="558,355,0,0" VerticalAlignment="Top" Width="142" Click="btn_salir_Click"/>

    </Grid>
</Window>
