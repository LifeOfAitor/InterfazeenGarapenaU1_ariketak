<Window x:Class="ariketak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ariketak"
        mc:Ignorable="d"
        Title="Calculo de formula matematica" Height="450" Width="450">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="50,50,0,0" TextWrapping="Wrap" Text="Primer numero" VerticalAlignment="Top" Width="120" Background="red" FontFamily="Comic Sans MS"/>
        <TextBox HorizontalAlignment="Left" Margin="50,100,0,0" TextWrapping="Wrap" Text="Segundo numero" VerticalAlignment="Top" Width="120" Background="red" FontFamily="Comic Sans MS"/>
        <TextBox HorizontalAlignment="Left" Margin="50,150,0,0" TextWrapping="Wrap" Text="Tercer numero" VerticalAlignment="Top" Width="120" Background="red" FontFamily="Comic Sans MS"/>
        <TextBox HorizontalAlignment="Left" Margin="50,200,0,0" TextWrapping="Wrap" Text="Cuarto numero" VerticalAlignment="Top" Width="120" Background="red" FontFamily="Comic Sans MS"/>
        <TextBox HorizontalAlignment="Left" Margin="50,250,0,0" TextWrapping="Wrap" Text="Resultado" VerticalAlignment="Top" Width="120" Background="LightBlue"/>

        <TextBox x:Name="a" HorizontalAlignment="Left" Margin="260,50,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="b" HorizontalAlignment="Left" Margin="260,100,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="c" HorizontalAlignment="Left" Margin="260,150,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="d" HorizontalAlignment="Left" Margin="260,200,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="resul" HorizontalAlignment="Left" Margin="260,250,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        <Button x:Name="operar" Content="Operar" HorizontalAlignment="Left" Margin="75,330,0,0" VerticalAlignment="Top" Width="70" Click="Button_Click"/>
        <Button x:Name="limpiar" Content="Limpiar" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Width="70" Click="limpiar_Click"/>
        <Button x:Name="salir" Content="Salir" HorizontalAlignment="Left" Margin="310,330,0,0" VerticalAlignment="Top" Width="70" Click="salir_Click"/>
    </Grid>
</Window>
