<Window x:Class="ariketa11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ariketa11"
        mc:Ignorable="d"
        Title="Variables Globales" Height="384" Width="400">
    <Grid>
        <Label Content="Nombre: " HorizontalAlignment="Left" Margin="70,42,0,0" VerticalAlignment="Top" Height="31"/>
        <Label Content="1º Apellido: " HorizontalAlignment="Left" Margin="70,102,0,0" VerticalAlignment="Top" Height="31"/>
        <Label Content="2º Apellido: " HorizontalAlignment="Left" Margin="70,162,0,0" VerticalAlignment="Top" Height="31"/>
        <Label Content="DNI:: " HorizontalAlignment="Left" Margin="70,221,0,0" VerticalAlignment="Top" Height="32"/>
        <TextBox x:Name="text_box_nombre" HorizontalAlignment="Left" Margin="200,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox x:Name="text_box_apellido1" HorizontalAlignment="Left" Margin="200,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox x:Name="text_box_apellido2" HorizontalAlignment="Left" Margin="200,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox x:Name="text_box_DNI" HorizontalAlignment="Left" Margin="200,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="22"/>
        <Button x:Name="btn_aceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="60,309,0,0" VerticalAlignment="Top" Width="55" Height="24" Click="btn_aceptar_Click"/>
        <Button x:Name="btn_cargar_visualizar" Content="Cargar y Visualizar" HorizontalAlignment="Center" Margin="0,309,0,0" VerticalAlignment="Top" Width="120" Height="24" Click="btn_cargar_visualizar_Click" IsEnabled="False"/>
        <Button x:Name="btn_salir" Content="Salir" HorizontalAlignment="Left" Margin="294,309,0,0" VerticalAlignment="Top" Width="57" Click="btn_salir_Click" Height="24"/>

    </Grid>
</Window>
