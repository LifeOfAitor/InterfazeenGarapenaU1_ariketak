<Window x:Class="ariketa9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ariketa9"
        mc:Ignorable="d"
        Title="Lista de amigos" Height="560" Width="500">
    <Grid>
        <ListBox x:Name="list_box_lista" Width="200" Margin="70,72,230,243" SelectionChanged="text_box_lista_SelectionChanged"/>
        <Label Content="Lista de amigos" HorizontalAlignment="Left" Margin="70,31,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="text_box_seleccionado" HorizontalAlignment="Left" Margin="70,355,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="31" IsEnabled="False"/>
        <Label Content="Amigo seleccionado" HorizontalAlignment="Left" Margin="70,324,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="text_box_nuevo" HorizontalAlignment="Left" Margin="70,444,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="30"/>
        <Label Content="Amigo nuevo" HorizontalAlignment="Left" Margin="70,412,0,0" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="salir" Content="Salir" HorizontalAlignment="Left" Margin="365,444,0,0" VerticalAlignment="Top" Height="30" Width="76" Click="salir_Click"/>
        <Button x:Name="btn_add" Content="Añadir" HorizontalAlignment="Left" Margin="326,44,0,0" VerticalAlignment="Top" Height="50" Width="130" Click="btn_add_Click"/>
        <Button x:Name="btn_del" Content="Eliminar" HorizontalAlignment="Left" Margin="326,132,0,0" VerticalAlignment="Top" Height="50" Width="130" Click="btn_del_Click"/>
        <Button x:Name="btn_del_all" Content="Eliminar lista" HorizontalAlignment="Left" Margin="326,222,0,0" VerticalAlignment="Top" Height="50" Width="130" Click="btn_del_all_Click"/>
    </Grid>
</Window>
